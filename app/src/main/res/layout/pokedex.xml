<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/pokedex">

    <ImageView
        android:id="@+id/IVPokefoto"
        android:layout_width="220dp"
        android:layout_height="105dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias=".172"
        app:layout_constraintVertical_bias=".443"
        />

    <ScrollView
        android:id="@+id/SVPokemon"
        android:layout_width="220dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/IVPokefoto"
        app:layout_constraintVertical_bias=".42"
        app:layout_constraintHorizontal_bias=".65"
        >
        <TextView
            android:id="@+id/TVPokenombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pokenombre"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>